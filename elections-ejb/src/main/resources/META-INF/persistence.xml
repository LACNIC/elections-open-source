<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="elecciones-pu"
		transaction-type="JTA">
		<jta-data-source>java:/elecciones-ds</jta-data-source>

		<class>net.lacnic.elections.domain.AccesosIps</class>
		<class>net.lacnic.elections.domain.Actividad</class>
		<class>net.lacnic.elections.domain.Auditor</class>
		<class>net.lacnic.elections.domain.Candidato</class>
		<class>net.lacnic.elections.domain.Comisionado</class>
		<class>net.lacnic.elections.domain.Eleccion</class>
		<class>net.lacnic.elections.domain.EleccionLight</class>
		<class>net.lacnic.elections.domain.Email</class>
		<class>net.lacnic.elections.domain.EmailHistorico</class>
		<class>net.lacnic.elections.domain.Parametro</class>
		<class>net.lacnic.elections.domain.Personalizacion</class>
		<class>net.lacnic.elections.domain.SupraEleccion</class>
		<class>net.lacnic.elections.domain.TemplateEleccion</class>
		<class>net.lacnic.elections.domain.UsuarioAdmin</class>
		<class>net.lacnic.elections.domain.UsuarioPadron</class>
		<class>net.lacnic.elections.domain.Voto</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.archive.autodetection" value="hbm" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
		</properties>
	</persistence-unit>

</persistence>
